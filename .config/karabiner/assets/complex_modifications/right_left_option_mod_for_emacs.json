{
	"title": "mod right/left option key for iterm or not.",
	"rules": [
		{
			"description": "iTerm2以外は左optionを単体で打った場合のみ英数キーとする。",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "left_option",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "left_option"
						}
					],
					"to_if_alone": [
						{
							"key_code": "japanese_eisuu"
						}
					],
					"conditions": [
						{
							"type": "frontmost_application_unless",
							"bundle_identifiers": [
								"^com\\.googlecode\\.iterm2$"
							]
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "left_option",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "left_option"
						}
					],
					"to_if_alone": [
						{
							"key_code": "0",
							"modifiers": ["right_option"]
						}
					],
					"conditions": [
						{
							"type": "frontmost_application_if",
							"bundle_identifiers": [
								"^com\\.googlecode\\.iterm2$"
							]
						}
					]
				}
			]
		}
	]
}
