{
	"title": "My mod: right/left option key for iterm or not.",
    "rules": [
        {
            "description": "iTerm2では左optionを単体で打った場合のみmozc Japanese off (C-0) -> f23 -> f2 -> f15 -> f11 -> f9 -> f3とする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "f3"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "iTerm2では右optionキーをmozc Japanese on (C-9) -> (C-\\) -> f22 -> f1 -> f14 -> f10 -> f4とする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "right_option"
                    },
                    "to": [
                        {
                            "key_code": "right_option"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "f4"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "それ以外は右optionキーを変換キー(japanese_kana)とする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ],
                            "type": "frontmost_application_unless"
                        }
                    ],
                    "from": {
                        "key_code": "right_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "japanese_kana"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "それ以外は左optionを単体で打った場合のみ英数キーとする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ],
                            "type": "frontmost_application_unless"
                        }
                    ],
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "japanese_eisuu"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
