{
	"title": "My mod: space and alt.",
    "rules": [
        {
            "description": "spaceキー単独ならspace、複数ならaltとする。",
            "manipulators": [
                {
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
