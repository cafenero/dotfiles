{
	"title": "My mod: option + 12345 to apps.",
    "rules": [
        {
            "description": "option + 1 ->  iTerm",
            "manipulators": [
                {
                    "from": {
                        "key_code": "1",
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
							// "shell_command": "open '/System/Applications/Utilities/Activity Monitor.app'"
							// "shell_command": "open '/System/Applications/System Preferences.app/Contents/MacOS/System Preferences.app'"
							"shell_command": "open '/Applications/iTerm.app'"
							// "shell_command": "open '/Applications/Google Chrome.app'"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },

