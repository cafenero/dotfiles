{
	"title": "My mod: general settings.",
    "rules": [
        {
            "description": "General: Ctrl-nをdownとする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "n",
						"modifiers": {
							"mandatory": ["control"]
						}
					},
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ]
                }
            ]
        },

        {
            "description": "General: Ctrl-pをupとする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "p",
						"modifiers": {
							"mandatory": ["control"]
						}
					},
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ]
                }
            ]
        },


        {
            "description": "General: Ctrl-fをrightとする。",
            "manipulators": [
