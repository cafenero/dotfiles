{
	"title": "My mod: general settings.",
    "rules": [
        {
            "description": "General: Ctrl-nをdownとする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "n",
						"modifiers": {
							"mandatory": ["control"]
						}
					},
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ]
                }
            ]
        },

        {
            "description": "General: Ctrl-pをupとする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "p",
						"modifiers": {
							"mandatory": ["control"]
						}
					},
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ]
                }
            ]
        },


        {
            "description": "General: Ctrl-fをrightとする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "f",
						"modifiers": {
							"mandatory": ["control"]
						}
					},
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ]
                }
            ]
        },


        {
            "description": "General: Ctrl-bをleftとする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "b",
						"modifiers": {
							"mandatory": ["control"]
						}
					},
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ]
                }
            ]
        },


        {
            "description": "General: Alt(option)-dを単語削除(option-delete-forward)とする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "d",
						"modifiers": {
							"mandatory": ["option"]
						}
					},
                    "to": [
                        {
                            "key_code": "delete_forward"
                        }
                    ]
                }
            ]
        },
        {
            "description": "General: Ctrl-wを後方単語削除(option-delete)とする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [ "^com\\.googlecode\\.iterm2$" ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "w",
						"modifiers": {
							"mandatory": ["left_control"]
						}
					},
                    "to": [
                        {
                            "key_code": "delete_or_backspace",
							"modifiers": "option"
                        }
                    ]
                }
            ]
        },

        {
            "description": "General: Cmd+jでエンターとする。",
            "manipulators": [
                {
                "type": "basic",
                "from": {
                    "key_code": "j",
                    "modifiers": {
                        "mandatory": ["left_control"]
                    }
                },
                "to": [
                    {
                    "key_code": "return_or_enter"
                    }
                ]
            }
            ]
        },

        {
            "description": "General: Ctrl+Cmd+jでCmd+エンターとする。",
            "manipulators": [
                {
                "type": "basic",
                "from": {
                    "key_code": "j",
                    "modifiers": {
                        "mandatory": ["left_control", "left_command"]
                    }
                },
                "to": [
                    {
                    "key_code": "return_or_enter",
                    "modifiers": "left_command"
                    }
                ]
            }
            ]
        }

    ]
}
