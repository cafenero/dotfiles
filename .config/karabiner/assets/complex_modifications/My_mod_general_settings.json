                            ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "f",
						"modifiers": {
							"mandatory": ["control"]
						}
					},
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ]
                }
            ]
        },


        {
            "description": "General: Ctrl-bをleftとする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "b",
						"modifiers": {
							"mandatory": ["control"]
						}
