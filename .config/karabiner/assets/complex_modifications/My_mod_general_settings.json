        },


        {
            "description": "General: Alt(option)-dを単語削除(option-delete)とする。",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ]
                        }
                    ],
					"type": "basic",
                    "from": {
                        "key_code": "d",
						"modifiers": {
							"mandatory": ["option"]
						}
					},
                    "to": [
                        {
                            "key_code": "delete_forward",
							"modifiers": "option"
                        }
                    ]
                }
            ]
        }


    ]
}
